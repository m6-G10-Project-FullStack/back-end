// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id
  email       String    @unique
  name        String
  cpf         String
  phone       String
  birthday    String
  description String
  is_seller   Boolean   @default(false)
  password    String
  cep         String
  state       String
  city        String
  street      String
  number      String
  complement  String?
  color       String?
  token       String?
  cars        Car[]
  comments    Comment[]
  @@map("users")
}

model Car {
  id          String    @id
  year        Int
  fuel        String
  km          Int
  color       String
  fipe        Int
  price       Int
  is_promo    Boolean
  description String
  is_active   Boolean   @default(true)
  model       String
  coverImage  String
  comments    Comment[]
  photos      Gallery[]
  User        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  Brand       Brand?    @relation(fields: [brandId], references: [id])
  brandId     Int
  @@map("cars")
}

model Comment {
  id      String  @id 
  comment String
  User    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  Car     Car?    @relation(fields: [carId], references: [id])
  carId   String
  @@map("comments")
}

model Gallery {
  id         Int    @id @default(autoincrement())
  photo_link String
  Car   Car?    @relation(fields: [carId], references: [id])
  carId String?
  @@map("galeries")
}

model Brand {
  id   Int    @id @default(autoincrement())
  name String @unique
  cars Car[]
  @@map("brands")
}